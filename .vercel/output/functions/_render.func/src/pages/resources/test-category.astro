---
export const prerender = false;

const { slug } = Astro.params;
const url = new URL(Astro.request.url);
---

<html>
<head>
  <title>Resources Test</title>
</head>
<body>
  <h1>Resources Category Test</h1>
  <p>Slug: {slug || "none"}</p>
  <p>URL: {url.toString()}</p>
  <p>Time: {new Date().toISOString()}</p>
  
  <h2>Available Categories:</h2>
  <ul>
    <li><a href="/resources/category/zero-trust/1">Zero Trust</a></li>
    <li><a href="/resources/category/service-mesh/1">Service Mesh</a></li>
    <li><a href="/resources/category/kubernetes/1">Kubernetes</a></li>
  </ul>
</body>
</html>
