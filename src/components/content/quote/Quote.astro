---
import styles from './Quote.module.css';
import Icon from '@/assets/learn/quote.svg';
import clsx from "clsx";

interface Props {
	author?: string;
	position?: string;
}

const { author, position } = Astro.props;
---

<blockquote class={styles.quote}>
  <div class={styles.content}>
    <Icon class={styles.icon}
    width={40}
    height={40}
  />
  <slot />
  </div>

  {
		(author || position) && (
			<footer class={styles.footer}>
				{
          author && <cite class={clsx(
            'text__body--14-medium',
            'text__body--14-medium-lg',
            'text__body--14-medium-md',
            styles.author
          )}>
            {author}
          </cite>
        }
				{
          position && <span class={clsx(
            'text__body--14',
            'text__body--14-lg',
            'text__body--14-md',
            styles.position
          )}>
            {position}
          </span>
        }
			</footer>
		)
	}
</blockquote>