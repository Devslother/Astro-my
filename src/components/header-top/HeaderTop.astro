---
import Button from '../Button/Button.astro';
import Icon from '../icon/Icon.astro';
import styles from './HeaderTop.module.css';
---
<div class={styles.headertop} id="headertop">
  <div class={styles.container}>
    <p class={`text__body--14-medium ${styles.text}`} data-headertop--text>Announcing TEG 1.2â€”Enterprise support and FedRAMP-ready FIPS builds for Envoy Gateway 1.2</p>
    <Button variant="tertiary" size="sm" class={styles.btntop} href="https://tetrate.io/blog/announcing-tetrate-enterprise-gateway-for-envoy-v1-2/"> 
      <span class={`text__body--14-medium ${styles.span}`}>Learn more</span>
      <Icon 
      name="arrow-right" 
      width={24} height={24} 
      color="var(--color-orange-500)" />
    </Button>
  </div>
  <button class={styles.closebtn} id="closeBtn">
    <Icon name="close" width={24} height={24} color="var(--color-white)" />
  </button>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const closeBtn = document.getElementById("closeBtn");
    const headerTop = document.getElementById("headertop");

    if (closeBtn && headerTop) {
      closeBtn.addEventListener("click", () => {
        headerTop.style.display = "none";
      });
    }
  });
</script>