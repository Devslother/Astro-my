---
import GlowButton from '../../../components/Button/GlowButton.astro';
import styles from './Hero.module.css';
import imageMobile from '../../../assets/istio/hero/hero-mobile.webp';
import imageTablet from '../../../assets/istio/hero/hero-tablet.webp';
import imageDesktop from '../../../assets/istio/hero/hero-desktop.webp';
import Picture from '../../../components/Picture.astro';
---

<div class={styles.hero}>
  <Picture 
    alt="bg" 
    srcMobile={imageMobile.src}
    srcTablet={imageTablet.src}
    srcDesktop={imageDesktop.src}
    class={styles.hero__bg}
    loading="eager"
    fetchpriority="high"
   />

  <div class={styles.hero__content}>
    <h1 class='text__heading--h4
      text__heading--h1-lg
      text__heading--h3-md'
      >
      Tetrate Istio 
      <br class="u-visible u-hidden--md u-visible--lg" /> 
      Subscription
    </h1>
    <p class='text__body--16
      text__body--18-lg
      text__body--16-md'
    >
      Effortlessly deploy and scale Istio with enterprise-grade 
      <br class="u-hidden u-visible--md u-visible--lg" /> 
      support, extended CVE protection, advanced diagnostics,
      <br> 
      and seamless troubleshooting
    </p>
    <GlowButton
      variant="primary"
      size="lg"
      buttonClassName="text__body--16-semibold"
      containerClassName="my-glow-margin"
      data-modal-open="demo-request-modal"
      type="button"
    >
      Request a demo
    </GlowButton>
  </div>
</div>
