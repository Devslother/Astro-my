---
import { GlowButton } from '../../../components/Button/GlowButton';
import styles from './Hero.module.css';
---

<div class={styles.hero}>
  <div class={styles.hero__bg}></div>
  <div class={styles.hero__content}>
    <h1 class='text__heading--h4
      text__heading--h1-lg
      text__heading--h3-md'
      >
      Agent Operations 
      <br class="u-hidden u-hidden--md u-visible--lg" /> 
      Director
    </h1>
    <p class='text__body--16
      text__body--18-lg
      text__body--16-md'
    >
      Runtime visibility and governance for ML 
      <br class="u-hidden u-hidden--md u-visible--lg" /> 
      infrastructure teams to maximize GenAI ROI
    </p>
    <GlowButton
      variant="primary"
      size="lg"
      buttonClassName="text__body--16-semibold"
      containerClassName="my-glow-margin"
      href="https://tetrate.io/contact/demo-request/"
    >
      Request a demo
    </GlowButton>
  </div>
</div>