---
import Grid from '../../../components/Grid/Grid.astro';
import styles from './Solves.module.css';
import clsx from 'clsx';
import Icon1 from '../../../assets/app/solves/icon1.svg';
import Icon2 from '../../../assets/app/solves/icon2.svg';
import Icon3 from '../../../assets/app/solves/icon3.svg';
import imageMobile from '../../../assets/agent/solves/solves-bg-mobile.svg';
import imageTablet from '../../../assets/agent/solves/solves-bg-tablet.svg';
import imageDesktop from '../../../assets/agent/solves/solves-bg-desktop.svg';
import Picture from '../../../components/Picture.astro';
import BgIcon from '../../../assets/app/solves/bg-icon.svg';

const items  = [
	{
		image: Icon1, 
    title: 'Global Service Routing',
    text: 'Manage ingress traffic from anywhere to anywhere with global service discovery, traffic policy configuration, and observability.'
  },
  {
		image: Icon2, 
    title: 'Availability as-a-Service',
    text: 'Achieve service level objective targets with dynamic load balancing across compute resources for platform teams.'
  },
  {
		image: Icon3, 
    title: 'Load Balancer as-a-Service',
    text: 'Rollout applications faster with self-service publishing without network tickets for developers.'
  }
]
---
<Grid>
  <div class={styles.solves}>
    <Picture 
    alt="bg" 
    srcMobile={imageMobile.src}
    srcTablet={imageTablet.src}
    srcDesktop={imageDesktop.src}
    class={styles.solves__bg}
     />
    <h5 class={clsx(
      'text__heading--h5',
      'text__heading--h3-lg',
      'text__heading--h4-md',
      styles.heading
      )}
    >
    Autonomous Ingress <br /> Orchestration Use Cases
    </h5>
    <div class={styles.container}>
      {items.map((item) => (
        <div class={styles.item}>
          <div class={styles.image}>
            {<item.image />}
            <div class={styles.image__bg}>
              <BgIcon />
            </div>
          </div>
          <div class={styles.content}>
            <h6 class=
              'text__body--18-medium
              text__heading--h6-lg
              text__body--18-medium-md'
            >
              {item.title}
            </h6>
            <p class=
              'text__body--14
              text__body--16-lg
              text__body--14-md'
             >
              {item.text} 
            </p>
          </div>
        </div>    
      ))}
    </div>
  </div>
</Grid>
		
    
  