---
import GlowButton from '../../../components/Button/GlowButton.astro';
import styles from './Hero.module.css';
import HeroBgMobile from '../../../assets/home/hero/hero-bg-mobile.svg';
import HeroBgTablet from '../../../assets/home/hero/hero-bg-tablet.svg';
import HeroBgDesktop from '../../../assets/home/hero/hero-bg.svg';
import HeroFigureMobile from '../../../assets/home/hero/hero-figure-mobile.svg';
import HeroFigureTablet from '../../../assets/home/hero/hero-figure-tablet.svg';
import HeroFigureDesktop from '../../../assets/home/hero/hero-figure.svg';
---

<div class={styles.hero}>
  <div class={styles.hero__bg}>
    <HeroBgMobile class="u-visible u-hidden--md u-hidden--lg" />
    <HeroBgTablet class="u-hidden u-visible--md u-hidden--lg" />
    <HeroBgDesktop class="u-hidden u-hidden--md u-visible--lg" />
  </div>

   <div class={styles.hero__figure}>
    <HeroFigureMobile class="u-visible u-hidden--md u-hidden--lg" />
    <HeroFigureTablet class="u-hidden u-visible--md u-hidden--lg" />
    <HeroFigureDesktop class="u-hidden u-hidden--md u-visible--lg" />
  </div>
   <div class={styles.hero__content}>
    <h1 class='text__heading--h4
      text__heading--h1-lg
      text__heading--h3-md'
      >
      Dynamic Gateways
    </h1>
    <p class='text__body--16
      text__body--18-lg
      text__body--16-md'
    >
    For AI, Application Delivery, 
    <br class="u-visible u-hidden--md u-hidden--lg" /> 
    and Service Mesh
    </p>
    <GlowButton
      variant="primary"
      size="lg"
      buttonClassName="text__body--16-semibold"
      containerClassName="my-glow-margin"
      href="https://tetrate.io/contact/demo-request/"
    >
      Request a demo
    </GlowButton>
  </div>
</div>