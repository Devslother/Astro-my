---
import clsx from 'clsx';
import GlowButton from '../../../components/Button/GlowButton.astro';
import styles from './Hero.module.css';
import imageMobile from '../../../assets/home/hero/hero-mobile.svg';
import imageTablet from '../../../assets/home/hero/hero-tablet.svg';
import imageDesktop from '../../../assets/home/hero/hero-desktop.svg';
import Picture from '../../../components/Picture.astro';
---

<div class={styles.hero}>
  <Picture 
  alt="bg" 
  srcMobile={imageMobile.src}
  srcTablet={imageTablet.src}
  srcDesktop={imageDesktop.src}
  class={styles.hero__bg}
   />
   <div class={styles.hero__content}>
    <h1 class='text__heading--h4
      text__heading--h1-lg
      text__heading--h3-md'
      >
      Dynamic Gateways
    </h1>
    <p class='text__body--16
      text__body--18-lg
      text__body--16-md'
    >
    For AI, Application Delivery, 
    <br class="u-visible u-hidden--md u-hidden--lg" /> 
    and Service Mesh
    </p>
    <GlowButton
      variant="primary"
      size="lg"
      buttonClassName="text__body--16-semibold"
      containerClassName="my-glow-margin"
      href="https://tetrate.io/contact/demo-request/"
    >
      Request a demo
    </GlowButton>
  </div>
</div>