---
import Button from '../../../components/Button/Button';
import { Icon } from '../../../components/icon/Icon';
import styles from './Card.module.css'
const { image, newsname, title, buttonLink } = Astro.props;
---

<div class={styles.card}>
    <img class={styles.img} src={image} alt={title} />
    <div class={styles.content}>
      <h3 class="text__body--14-medium-uppercase" style={{ color: 'var(--color-blue-500)' }}>{newsname}</h3>
      <h1 class="text__heading--h5">{title}</h1>
      <div class="text__body--14" style={{ color: 'var(--color-gray-800)' }}>
        <slot /> <!-- ВАЖНО! Вставляем контент через `slot` -->
      </div>
    </div>
  
    <Button variant="tertiary" size="sm" href={buttonLink} className={styles.btn}>
      <span class="text__body--16-semibold" style={{ color: 'var(--color-black)' }}>Start now</span>
      <Icon name="arrow" width={24} height={24} />
    </Button>
</div>