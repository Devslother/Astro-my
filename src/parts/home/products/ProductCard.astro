---
import Button from '../../../components/Button/Button.astro';
import Icon from '../../../components/icon/Icon.astro';
import styles from './ProductCard.module.css'
import clsx from 'clsx';

const { image, title, description, item, buttonLink } = Astro.props;
---
<div class={styles.card}>
    <img class={styles.img} src={image} alt={title} />
  <div class={styles.container}>
    <div class={styles.content}>
      <div class={styles.header}>
        <h5 class={clsx(
          'text__heading--h5',
          'text__heading--h5-lg',
          'text__heading--h6-md',
          styles.heading
        )}>
          {Array.isArray(title) ? (
             <span class={styles.titleLines}>
              {title.map(line => (
                <span>{line}</span> 
              ))}
            </span>
          ) : (
            title
          )}
        </h5>
        <p class={clsx(
          'text__body--14',
          'text__body--14-lg',
          'text__caption--md',
          styles.description
        )}>
          {description}
        </p>
      </div>
    
      <div class={styles.itemList}>
        {item.map((text: string) => (
          <div class={styles.item}>
            <div class="wrapper">
              <Icon name="bullet" />
            </div>
            <span class={clsx(
              'text__body--14',
              'text__body--14-lg',
              'text__caption--md',
              styles.text
            )}>
              {text}
            </span>
          </div>
        ))}
      </div>
    </div>
    <Button 
      variant="primary" 
      size="lg" 
      href={buttonLink}  
      class={styles.productbtn}
    >
      <span class={clsx(
        'text__body--16-medium',
        'text__body--16-semibold-lg',
        'text__body--16-medium-md',
      )}>
        Learn more
      </span>
        <Icon 
        name="arrow-right" 
        width={24} 
        height={24}
        color="var(--color-white)" 
         />
    </Button>
  </div>
</div>
