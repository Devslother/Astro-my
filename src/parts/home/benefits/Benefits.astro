---
import clsx from 'clsx';
import styles from './Benefits.module.css'
import Grid from '../../../components/Grid/Grid.astro';
import CardMobile1 from '../../../assets/home/benefits/card1/card1-mobile.png'
import CardMobile2 from '../../../assets/home/benefits/card2/card2-mobile.svg'
import CardMobile3 from '../../../assets/home/benefits/card3/card3-mobile.svg'
import CardMobile4 from '../../../assets/home/benefits/card4/card4-mobile.svg'
import CardTablet1 from '../../../assets/home/benefits/card1/card1-tablet.png'
import CardTablet2 from '../../../assets/home/benefits/card2/card2-tablet.svg'
import CardTablet3 from '../../../assets/home/benefits/card3/card3-tablet.svg'
import CardTablet4 from '../../../assets/home/benefits/card4/card4-tablet.svg'
import CardDesktop1 from '../../../assets/home/benefits/card1/card1-desktop.png'
import CardDesktop2 from '../../../assets/home/benefits/card2/card2-desktop.svg'
import CardDesktop3 from '../../../assets/home/benefits/card3/card3-desktop.svg'
import CardDesktop4 from '../../../assets/home/benefits/card4/card4-desktop.svg'
import Picture from '../../../components/Picture.astro';
---

<div class={styles.benefits}>
  <h5 class={clsx(
        'text__heading--h5',
        'text__heading--h2-lg',
        'text__heading--h4-md',
        'text--center',
        styles.benefits__heading
      )}>
    Full Lifecycle
    <span style={{ color: 'var(--color-orange-500)' }}>
      Network <br /> Management
    </span> 
      for Dynamic <br /> and Heterogenous Microservices
  </h5>
  <Grid>
    <div class={styles.card__container}>
        <div class={styles.card1}>
          <Picture 
            alt="bg" 
            srcMobile={CardMobile1.src}
            srcTablet={CardTablet1.src}
            srcDesktop={CardDesktop1.src}
            class={styles.card__bg}
            />
          <h6 class={clsx(
            'text__heading--h6',
            'text__heading--h5-lg',
            'text__body--18-medium-md',
          )}>
            Discover
          </h6>
          <p class={clsx(
            'text__body--14',
            'text__body--16-lg',
            'text__caption--md',
            styles.card__text,
          )}>
            Global service ownership registry for Kubernetes, VMs, Cloud APIs.
          </p>
        </div>
        <div class={styles.card2}>
          <Picture 
            alt="bg" 
            srcMobile={CardMobile2.src}
            srcTablet={CardTablet2.src}
            srcDesktop={CardDesktop2.src}
            class={styles.card__bg}
          />
          <h6 class={clsx(
            'text__heading--h6',
            'text__heading--h5-lg',
            'text__body--18-medium-md',
          )}>
            Connect
          </h6>
          <p class={clsx(
            'text__body--14',
            'text__body--16-lg',
            'text__caption--md',
            styles.card__text,
          )}>
            North-south and east-west traffic load balancing and visibility to achieve SLO targets.
          </p>
        </div>
  
        <div class={styles.card3}>
          <Picture 
            alt="bg" 
            srcMobile={CardMobile3.src}
            srcTablet={CardTablet3.src}
            srcDesktop={CardDesktop3.src}
            class={styles.card__bg}
          />
          <h6 class={clsx(
            'text__heading--h6',
            'text__heading--h5-lg',
            'text__body--18-medium-md',
          )}>
            Secure
          </h6>
          <p class={clsx(
            'text__body--14',
            'text__body--16-lg',
            'text__caption--md',
            styles.card__text,
          )}>
            Zero trust application access with zero application developer toil.
          </p>
        </div>
        <div class={styles.card4}>
          <Picture 
            alt="bg" 
            srcMobile={CardMobile4.src}
            srcTablet={CardTablet4.src}
            srcDesktop={CardDesktop4.src}
            class={styles.card__bg}
          />
          <h6 class={clsx(
            'text__heading--h6',
            'text__heading--h5-lg',
            'text__body--18-medium-md',
          )}>
            Optimaze
          </h6>
          <p class={clsx(
            'text__body--14',
            'text__body--16-lg',
            'text__caption--md',
            styles.card__text,
          )}>
            Infrastructure cost and ROI management with granular usage tracking and proactive traffic shaping.
          </p>
        </div>
    </div>
  </Grid>    
</div>