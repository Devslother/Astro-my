---
import GlowButton from '../../../components/Button/GlowButton.astro';
import styles from './Hero.module.css';
import imageMobile from '../../../assets/financial/hero/hero-mobile.png';
import imageTablet from '../../../assets/financial/hero/hero-tablet.png';
import imageDesktop from '../../../assets/financial/hero/hero-desktop.png';
import Picture from '../../../components/Picture.astro';
---

<div class={styles.hero}>
  <Picture 
  alt="bg" 
  srcMobile={imageMobile.src}
  srcTablet={imageTablet.src}
  srcDesktop={imageDesktop.src}
  class={styles.hero__bg}
   />

  <div class={styles.hero__content}>
    <h1 class='text__heading--h4
      text__heading--h1-lg
      text__heading--h3-md'
      >
      Tetrate Financial 
      <br> 
      Services Solutions
    </h1>
    <p class='text__body--16
      text__body--18-lg
      text__body--16-md'
    >
    Build secure, scalable cloud-native applications 
    <br class="u-hidden u-visible--md u-visible--lg" /> 
    and innovate faster with the service mesh 
    </p>
    <GlowButton
      variant="primary"
      size="lg"
      buttonClassName="text__body--16-semibold"
      containerClassName="my-glow-margin"
      href="https://tetrate.io/contact-us"
    >
    Talk to an Expert
    </GlowButton>
  </div>
</div>