---
import Footer from '../components/footer/Footer.astro';
import HeaderTop from '../components/header-top/HeaderTop.astro';
import Header from '../components/header/Header.astro';
import Modal from '../components/modal/Modal.astro';
import RequestForm from '../components/forms/request-form/RequestForm.astro';
import "../styles/global.css";


const {
	title = "Tetrate: Safe, Fast, and Profitable AI for the Enterprise",
	description = "Tetrate provides trusted connectivity and control for AI. Empower developers while safeguarding the business. Built atop the proven Envoy proxy & Envoy AI Gateway.",
	ogImage = "/og-image.png",
	bodyClass = "",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="favicon/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="favicon/favicon.svg" />
		<link rel="shortcut icon" href="favicon/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${Astro.site}${ogImage}`} />
		<meta property="og:url" content={`${Astro.site}${Astro.url.pathname}`} />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Tetrate" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${Astro.site}${ogImage}`} />

		<link rel="preload" href="/fonts/Poppins-Regular.ttf" as="font" type="font/ttf" crossorigin />
		<link rel="preload" href="/fonts/Poppins-Medium.ttf" as="font" type="font/ttf" crossorigin />
		<link rel="preload" href="/fonts/Poppins-SemiBold.ttf" as="font" type="font/ttf" crossorigin />
	</head>
	
	<body class={bodyClass}>
		<HeaderTop />
		<Header />
		<slot />
	<script is:inline defer src="/scripts/dynamicSearch.js"></script>
		<Footer />

		<!-- Global Demo Request Modal -->
		<Modal id="demo-request-modal" isForm>
			<RequestForm
				title="Request a Demo"
				formId="demo-request-form-id"
				portalId="146786678"
				isModal
			/>
		</Modal>

		<!-- Initialize modals and forms -->
		<script>
			import initModals from '../utils/modal.client.ts';
			
			// Initialize modals
			initModals();
			
			// Lazy-init request form only when demo modal is opened
			let requestFormInitialized = false;
			const initRequestFormLazy = async () => {
				if (requestFormInitialized) return;
				requestFormInitialized = true;
				const mod = await import('../utils/requestForm.client.ts');
				mod.default();
			};

			const maybeInitRequestForm = () => {
				const form = document.getElementById('pricing-form');
				if (form) initRequestFormLazy();
			};

			// If a request form is already on the page (non-modal), init immediately
			document.addEventListener('astro:page-load', maybeInitRequestForm);
			if (document.readyState !== 'loading') {
				maybeInitRequestForm();
			}

			// Lazy-init when any modal is opened
			document.addEventListener('click', (e) => {
				const trigger = e.target?.closest?.('[data-modal-open]');
				if (trigger) {
					// Wait a tick so modal content is in the DOM
					setTimeout(maybeInitRequestForm, 0);
				}
			});
		</script>
	</body>
</html>
