---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Получаем все resources
const resources = await getCollection('resources');
---

<Layout title="Resources">
  <main>
    <div class="container">
      <h1>Resources</h1>
      <p>Welcome to our resources section.</p>
      
      {resources.length > 0 ? (
        <div class="resources-grid">
          {resources.map((resource) => (
            <div class="resource-card">
              <h3>{resource.data.title}</h3>
              {resource.data.description && (
                <p>{resource.data.description}</p>
              )}
              {resource.data.date && (
                <p class="date">{new Date(resource.data.date).toLocaleDateString()}</p>
              )}
            </div>
          ))}
        </div>
      ) : (
        <p>No resources available yet.</p>
      )}
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .resource-card {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 1.5rem;
    background: white;
  }
  
  .resource-card h3 {
    margin: 0 0 1rem 0;
    color: #333;
  }
  
  .resource-card p {
    margin: 0.5rem 0;
    color: #666;
  }
  
  .date {
    font-size: 0.9rem;
    color: #999;
  }
</style>
